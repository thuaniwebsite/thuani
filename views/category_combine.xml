<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="form_view_thuani_category_combine" model="ir.ui.view">
            <field name="name">form.view.thuani.category.combine</field>
            <field name="model">thuani.category.combine</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="category_combine"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="tree_view_thuani_category_combine" model="ir.ui.view">
            <field name="name">tree.view.thuani.category.combine</field>
            <field name="model">thuani.category.combine</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="category_combine"/>
                </tree>
            </field>
        </record>

        <record id="action_view_thuani_category_combine" model="ir.actions.act_window">
            <field name="name">Category Combine</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">thuani.category.combine</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Combine new Category
              </p>
            </field>
        </record>


    <!--thuani > Blog > Category Combine-->
    <menuitem id="menu_thuani_category_combine" name="Category Combine" parent="menu_thuani_blog_categ" action="action_view_thuani_category_combine" sequence=""/>
    </data>
</odoo>