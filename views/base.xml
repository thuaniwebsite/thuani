<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--odooform-->
        <record id="view_thuani_base_form" model="ir.ui.view">
            <field name="name">view.thuani.base.form</field>
            <field name="model">thuani.base</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="base"/>
                            <field name="base_url"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--odootree-->
        <record id="view_thuani_base_tree" model="ir.ui.view">
            <field name="name">view.thuani.base.tree</field>
            <field name="model">thuani.base</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="base"/>
                    <field name="base_url"/>
                </tree>
            </field>
        </record>

        <!--odooviewaction-->
        <record id="action_thuani_base_view" model="ir.actions.act_window">
            <field name="name">Base</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">thuani.base</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Create a new base
              </p>
            </field>
        </record>


