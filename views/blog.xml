<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_thuani_post_form" model="ir.ui.view">
            <field name="name">view.thuani.post.form</field>
            <field name="model">thuani.post</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="base"/>
                            <field name="heading"/>

                            <!--<field name="category"/>-->
                            <field name="heading_url"/>
                            <field name="base_url"/>
                            <!--<field name="category_url"/>-->
                            <field name="combine_url"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_thuani_post_tree" model="ir.ui.view">
            <field name="name">view.thuani.post.tree</field>
            <field name="model">thuani.post</field>
            <field name="arch" type="xml">
                <tree string="thuani post tree">
                    <field name="heading"/>
                    <field name="base"/>
                    <!--<field name="category"/>-->
                    <field name="heading_url"/>
                    <field name="base_url"/>
                    <!--<field name="category_url"/>-->
                    <field name="combine_url"/>
                </tree>
            </field>
        </record>

        <record id="action_thuani_post_view" model="ir.actions.act_window">
            <field name="name">Blog</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">thuani.post</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">Create a new post</p>
            </field>
        </record>

    <!--thuani-->
    <menuitem id="menu_thuani_root" name="thuani" sequence="1"/>
    <!--thuani > Blog-->
    <menuitem id="menu_thuani_blog_categ" name="Blog" parent="menu_thuani_root" sequence=""/>
    <!--thuani > Blog > Post-->
    <menuitem id="menu_thuani_post" name="Post" parent="menu_thuani_blog_categ" action="action_thuani_post_view" sequence=""/>
    <!--thuani > Blog > Base-->
    <menuitem id="menu_thuani_base" name="Base" parent="menu_thuani_blog_categ" action="action_thuani_base_view" sequence=""/>





    </data>
</odoo>